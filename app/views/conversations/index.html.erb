<h1>Conversations</h1>

<h3>Users</h3>
<div class="users">
  <ul>
    <% @users.each do |user| %>
      <li><%= link_to conversation_path(Conversation.get(current_user, user)) do %>
        <%= user.name %></li>
        <% end %>
    <% end %>
  </ul>
</div>

<h3>Your conversations</h3>
<div id="conversations-list">
  <% if @conversations.present? %>
    <ul>
     <% @conversations.each do |c| %>
       <li><%= c.opposed_user(current_user) %> </li>
     <% end %>
    </ul>
  <% end %>
</div>
